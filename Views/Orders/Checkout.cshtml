    <div class="order-summary">
        <h2>Order Summary</h2>

        @foreach (var item in Model.Items)
        {
            <div class="summary-item">
                <div>
                    <strong>@item.BookTitle</strong><br />
                    Qty: @item.Quantity
                </div>
                <div>
                    $@(item.Price* item.Quantity)
                </div>
            </div>
        }

        <hr />

        <div class="summary-line">
            <div>Total:</div>
