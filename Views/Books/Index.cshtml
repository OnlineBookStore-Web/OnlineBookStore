@model IEnumerable<OnlineBookStore.Models.Book>

@{
    ViewData["Title"] = "Books";

    string selectedSort = Context.Request.Query["sort"];
}
@{
    var cart = ViewBag.Cart as List<CartItem> ?? new List<CartItem>();
}


<style>
    .hero {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        color: #fff;
        padding: 45px 25px;
        border-radius: 6px;
        margin-bottom: 35px;
    }
</style>

<div class="hero">
    <div class="container">
        <h1 class="h3">Discover Your Next Favorite Book</h1>
        <p>Browse thousands of books across categories — tech, classics, history, and more.</p>
    </div>
</div>

<!-- TO DISPLAY THE CATEGORY SBOVE SORT -->
<div class="container mb-3">
    <h5 class="fw-bold">
        Category:
        <span class="text-primary">
            @ViewBag.SelectedCategoryName
        </span>
    </h5>
</div>


<!-- SORT ONLY -->
<div class="container mb-4">
    <form method="get" class="row g-2">

        <!-- keep the category when sorting -->
        <input type="hidden" name="category" value="@Context.Request.Query["category"]" />

        <div class="col-md-3">
            <select name="sort" class="form-select" onchange="this.form.submit()">
                <option value="">Sort by...</option>

                <option value="price_asc"
                        selected="@(selectedSort == "price_asc")">
                    Price: Low → High
                </option>

                <option value="price_desc"
                        selected="@(selectedSort == "price_desc")">
                    Price: High → Low
                </option>
                <option value="popularity"
                        selected="@(selectedSort == "popularity")">
                    Popularity
                </option>

            </select>
        </div>


    </form>
</div>


<div class="container">
    <div class="row g-4">

        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <a asp-controller="Books" asp-action="Details" asp-route-id="@item.BookID" class="text-decoration-none text-dark">
                    <div class="book-card d-flex flex-column">

                        <img src="@item.ImageUrl" class="book-image" alt="@item.Title" />

                        <div class="p-3 d-flex flex-column">

                            <h5 class="mb-1">@item.Title</h5>
                            <div class="text-muted small mb-2">@item.Author?.Name</div>

                            @if (item.Stock > 0)
                                { <span class="badge bg-success">In Stock</span> }
                            else
                                { <span class="badge bg-danger">Out of Stock</span> }

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="price">$@item.Price</div>

                                @{
                                    var cartItem = cart.FirstOrDefault(c => c.BookID == item.BookID);
                                    var quantity = cartItem?.Quantity ?? 0;
                                }

                                @if (User.Identity.IsAuthenticated && item.Stock > 0)
                                {
                                    <div onclick="event.stopPropagation()">

                                        @if (quantity == 0)
                                        {
                                            <!-- CART ICON -->
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                                <input type="hidden" name="bookID" value="@item.BookID" />
                                                <button class="btn btn-outline-primary btn-sm">
                                                    <i class="bi bi-cart-plus"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <!-- - 1 + -->
                                            <div class="d-flex align-items-center gap-1">

                                                <form asp-controller="Cart" asp-action="UpdateQuantity" method="post">
                                                    <input type="hidden" name="bookID" value="@item.BookID" />
                                                    <input type="hidden" name="quantity" value="@(quantity - 1)" />
                                                    <button class="btn btn-outline-secondary btn-sm">−</button>
                                                </form>

                                                <span class="fw-bold">@quantity</span>

                                                <form asp-controller="Cart" asp-action="AddToCart" method="post">
                                                    <input type="hidden" name="bookID" value="@item.BookID" />
                                                    <button class="btn btn-outline-primary btn-sm">+</button>
                                                </form>

                                            </div>
                                        }
                                    </div>
                                }



                            </div>

                        </div>

                    </div>
                </a>
            </div>
        }

    </div>
</div>
