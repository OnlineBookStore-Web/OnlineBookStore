@model OnlineBookStore.Models.CartViewModel
@{
    ViewData["Title"] = "My Cart";
}

<link rel="stylesheet" href="~/css/style.css" />
<script src="~/js/cart.js"></script>

<h1>My Cart</h1>

<div class="cart-container">

    <div class="cart-items">
        @if (Model.Items == null || !Model.Items.Any())
        {
            <p>Your cart is empty.</p>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Book</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.BookTitle</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>
                                <form asp-action="UpdateQuantity" method="post">
                                    <input type="hidden" name="bookID" value="@item.BookID" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" />
                                    <button type="submit" class="btn btn-primary btn-sm">Update</button>
                                </form>
                            </td>
                            <td>@item.Total.ToString("C")</td>
                            <td>
                                <form asp-action="RemoveItem" method="post">
                                    <input type="hidden" name="bookID" value="@item.BookID" />
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    <div class="cart-summary">
        <h3>Total: @Model.CartTotal.ToString("C")</h3>
        <a asp-controller="Checkout" asp-action="Index" class="btn btn-success">Proceed to Checkout</a>
    </div>

</div>