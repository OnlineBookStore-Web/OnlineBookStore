@model OnlineBookStore.Models.User

@{
    ViewData["Title"] = "Profile";
}

<div class="d-flex justify-content-center align-items-center py-4">
    <div class="container" style="max-width: 600px;">
        <div class="card shadow-lg rounded-4">
            <div class="card-body p-4">

                <div class="text-center mb-4">
                    <h4 class="fw-bold">@Model.FullName</h4>
                    <p class="text-muted">@Model.Email</p>
                </div>

                <hr />

                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-bold text-primary"></label>
                    <input asp-for="FullName" class="form-control rounded-pill" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-bold text-primary"></label>
                    <input asp-for="Email" class="form-control rounded-pill"  readonly />
                </div>


                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold text-primary"></label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill" value="@Model.Password" readonly />
                </div>

                <div class="d-flex mt-4 gap-3">
                    <a asp-action="EditProfile" asp-route-id="@Model.UserID"
                       class="btn btn-primary rounded-pill px-4">
                        Edit Profile
                    </a>
                    <a asp-controller="Orders" asp-action="OrderHistory"
                       class="btn btn-outline-success rounded-pill px-4">
                        My Orders
                    </a>

                </div>

            </div>
        </div>
    </div>
</div>
