@model OnlineBookStore.Models.User
@{
    ViewData["Title"] = "login";
}

<div class="d-flex justify-content-center align-items-center py-3 m-5">
    <div class="container" style="max-width: 550px;">
        <div class="card shadow-lg rounded-4">
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <h2 class="fw-bold text-primary">Sign In</h2>
                    <p class="text-muted">Enter your credentials to access your account</p>
                </div>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>

                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }


                <form asp-action="Login" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold text-primary"></label>
                        <input asp-for="Email" class="form-control rounded-pill" placeholder="Enter your email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold text-primary"></label>
                        <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Sign In</button>
                    </div>

                    <div class="d-flex justify-content-center mt-3">
                        <p class="mb-0 ">
                            Don't have an account?
                            <a asp-controller="Account" asp-action="Register" class="text-primary fw-bold ms-1 text-decoration-none">Sign Up now</a>
                        </p>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
