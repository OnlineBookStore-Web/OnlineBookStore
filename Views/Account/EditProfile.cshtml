@model OnlineBookStore.Models.User

<div class="d-flex justify-content-center align-items-center py-4 m-5">
    <div class="container" style="max-width: 600px;">
        <div class="card shadow-lg rounded-4">

            <div class="card-header bg-primary text-white text-center py-3 rounded-top-4">
                <h2 class="mb-0">Edit Profile</h2>
            </div>

            <div class="card-body p-4">

                <form asp-action="EditProfile" method="post">

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold text-primary"></label>
                        <input asp-for="FullName" class="form-control rounded-pill" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold text-primary"></label>
                        <input asp-for="Email" class="form-control rounded-pill" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold text-primary"></label>
                        <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter new password" data-val="false" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-4">Save Changes</button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}