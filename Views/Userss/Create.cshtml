@model OnlineBookStore.Models.User
@{
    ViewData["Title"] = "Create";
}

<div class="d-flex justify-content-center align-items-center py-3">
    <div class="container" style="max-width: 500px;">
        <div class="card shadow-lg rounded-4">
            <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
                <h2 class="mb-0">Create Account</h2>
            </div>

            <div class="card-body p-4">
                <form asp-action="Create" method="post">

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label fw-bold text-primary"></label>
                        <input asp-for="FullName" class="form-control rounded-pill" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold text-primary"></label>
                        <input asp-for="Email" class="form-control rounded-pill" placeholder="Enter your email address" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                   
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold text-primary"></label>
                        <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-center mt-4">
                        <button type="submit" class="btn btn-primary btn-lg rounded-pill px-5">Create New Account</button>
                    </div>

                    <div class="d-flex justify-content-center mt-3">
                        <p class="mb-0">
                            Already have an account?
                            <a asp-controller="Userss" asp-action="Index" class="text-primary fw-bold ms-1 text-decoration-none">Sign in</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
