@model List<OnlineBookStore.Models.OrderDetail>

<h3 class="mb-4">Orders Management</h3>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}


<table class="table table-bordered table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Book</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderID</td>

                <td>
                    @item.Order?.User?.FullName
                </td>

                <td>
                    @item.Book?.Title
                </td>

                <td>@item.Quantity</td>

                <td>@item.Price.ToString("C")</td>

                <td>@(item.Price* item.Quantity)</td>
                <td>
                    
                    @if (item.Order?.Status == "Pending")
                    {
                        <form asp-controller="Admin"
                              asp-action="AcceptOrder"
                              method="post"
                              style="display:inline">

                            @Html.AntiForgeryToken()

                            <input type="hidden" name="id" value="@item.OrderID" />
                            @if (Model.Count(x => x.OrderID == item.OrderID) > 0 &&
                                Model.First(x => x.OrderID == item.OrderID) == item)
                                {



                                    <button type="submit" class="btn btn-success btn-sm">
                                        Accept
                                    </button>
                                }
                            </form>
                    }
                    else
                    {
                        <span class="text-muted">Accepted</span>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
